            android:id="@+id/btnGamePlay3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/btnGamePlay4"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/btnGamePlay5"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:id="@+id/btnGamePlay6"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_margin="5dp"
            android:id="@+id/btnGamePlay7"
            android:layout_width="0dp"
