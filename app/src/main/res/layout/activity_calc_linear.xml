<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcLinearActivity"
    android:orientation="vertical"
    android:layout_row="2"
    android:layout_column="1"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/edtCalcLinearInput"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

    <GridLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >

        <Button android:id="@+id/btnCalcLienar1"/>
        <Button android:id="@+id/btnCalcLienar2"/>
        <Button android:id="@+id/btnCalcLienar3"/>
        <Button android:id="@+id/btnCalcLienar4"/>
        <Button android:id="@+id/btnCalcLienar5"/>
        <Button android:id="@+id/btnCalcLienar6"/>




    </GridLayout>

</LinearLayout>